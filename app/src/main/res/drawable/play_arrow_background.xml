<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- checked false state -->
    <item android:drawable="@drawable/ic_pause_normal" android:state_pressed="false" android:state_checked="false"/>
    <!-- pressed checked state -->
    <item android:drawable="@drawable/ic_pause_pressed" android:state_pressed="true" android:state_checked="false"/>
    <!-- pressed unchecked state -->
    <item android:drawable="@drawable/ic_play_arrow_pressed" android:state_pressed="true" android:state_checked="true"/>
    <!-- default state -->
    <item android:drawable="@drawable/ic_play_arrow_normal" android:state_pressed="false" android:state_checked="true"/>
</selector>